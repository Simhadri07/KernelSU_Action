# Environment Configuration
CONFIG_ENV=config.env

# Kernel Source Configuration
KERNEL_SOURCE=https://github.com/xiaomi-mediatek-devs/android_kernel_xiaomi_mt6877
KERNEL_SOURCE_BRANCH=lineage-21
KERNEL_CONFIG=ruby_defconfig  # Ensure this file exists in arch/arm64/configs/
KERNEL_IMAGE_NAME=Image.gz-dtb
ARCH=arm64
ADD_LOCALVERSION_TO_FILENAME=false
EXTRA_CMDS_LD=ld.lld  # Corrected syntax

# Clang Configuration
## Custom Clang
USE_CUSTOM_CLANG=false
CUSTOM_CLANG_SOURCE=
CUSTOM_CLANG_BRANCH=

### If USE_CUSTOM_CLANG is false, DO NOT CHANGE CUSTOM_CMDS
CUSTOM_CMDS_CLANG_TRIPLE=aarch64-linux-gnu-

## AOSP Clang
CLANG_BRANCH=master-kernel-build-2022
CLANG_VERSION=r450784e

# GCC Configuration
ENABLE_GCC_ARM64=true
ENABLE_GCC_ARM32=true
USE_CUSTOM_GCC_64=false
CUSTOM_GCC_64_SOURCE=
CUSTOM_GCC_64_BRANCH=
CUSTOM_GCC_64_BIN=aarch64-linux-android-
USE_CUSTOM_GCC_32=false
CUSTOM_GCC_32_SOURCE=
CUSTOM_GCC_32_BRANCH=
CUSTOM_GCC_32_BIN=arm-linux-androideabi-

# KernelSU Configuration
ENABLE_KERNELSU=true
KERNELSU_TAG=v0.9.5
KSU_EXPECTED_SIZE=  # Optional: Add expected size if known
KSU_EXPECTED_HASH=  # Optional: Add expected hash if known

# General Kernel Configuration
DISABLE_LTO=false  # Keep LTO enabled unless incompatible
DISABLE_CC_WERROR=true  # Disable treating warnings as errors for a smoother build
ADD_KPROBES_CONFIG=false
ADD_OVERLAYFS_CONFIG=false
APPLY_KSU_PATCH=true  # Enable if KernelSU requires patches
REMOVE_UNUSED_PACKAGES=true

# AnyKernel3 Configuration
## Custom AnyKernel3
USE_CUSTOM_ANYKERNEL3=true
CUSTOM_ANYKERNEL3_SOURCE=https://github.com/osm0sis/AnyKernel3
CUSTOM_ANYKERNEL3_BRANCH=master

# Ccache Configuration
ENABLE_CCACHE=true

# DTBO Image Configuration
NEED_DTBO=true  # Ensure your source includes the required DTBO files

# Build Boot Images Configuration
BUILD_BOOT_IMG=true
SOURCE_BOOT_IMAGE=https://raw.githubusercontent.com/xiaoleGun/KernelSU_action/main/boot/boot.img

# Additional Notes
# - Make sure all required paths and dependencies are set up correctly.
# - Verify ruby_defconfig exists under arch/arm64/configs/.
# - Add proper permissions for downloaded repositories and files.
